{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Create Merchant user' %}

{% block action %}
    {{ backActionButton(
        url(
            '/merchant-gui/edit-merchant',
            {'id-merchant': merchantId}
        ) ~ '#tab-content-merchant-user',
        'Back to Merchant Users' | trans)
    }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(merchantUserForm) }}

            {% for field in merchantUserForm.children %}

                {{ form_row(field) }}

            {% endfor %}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Create' | trans }}" />
            {{ form_end(merchantUserForm) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
